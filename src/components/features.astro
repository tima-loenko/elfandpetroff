---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "Эльф",
    description:
      "Барабанщик, вокалист, мастер гроулинга и главный групповой воротила.",
    icon: "mdi:karate",
  },
  {
    title: "Петров",
    description:
      "Автор большинства песен и музыки, вокалист и клавишник, а также злостный кефирный пропойца.",
    icon: "mdi:glass-mug-variant",
  },
];
---

<ContentSection title="О группе" id="features">
 
<Fragment slot="lead">
   Наша группа появилась в 2022 году. Играем панк-рок и фолк-рок. Участники группы:
  </Fragment> -->
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul> 
</ContentSection>
